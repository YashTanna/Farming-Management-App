<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:id="@+id/dotsAndPipeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appIcon"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">

        <TextView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/circle_shape"
            android:text="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />
        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:background="#3CB371"
            android:layout_gravity="center" />
        <TextView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/circle_shape"
            android:text="2"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:background="#3CB371"
            android:layout_gravity="center" />

        <TextView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/circle_shape"
            android:text="3"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="170dp"
        android:text="Website"
        android:textStyle="bold"
        android:textColor="#696969"
        android:textSize="18sp" />



    <LinearLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dotsAndPipeline"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_border"
        android:padding="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/website"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/phoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="Enter the website URL"
            android:textSize="18dp"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:textColor="#A9A9A9"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Email"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="265dp"
        android:textColor="#696969"/>

    <LinearLayout
        android:id="@+id/phoneLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dotsAndPipeline"
        android:layout_marginTop="170dp"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_border"
        android:padding="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/email"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/phoneText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="Enter your mail address"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:textColor="#A9A9A9"
            android:background="@null"/>
    </LinearLayout>


    <TextView
        android:id="@+id/categoryText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneLayout"
        android:layout_marginTop="100dp"
        android:text="Facebook"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#696969"/>

    <LinearLayout
        android:id="@+id/phoneLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dotsAndPipeline"
        android:layout_marginTop="260dp"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_border"
        android:padding="12dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:src="@drawable/facebook" />
        <EditText
            android:id="@+id/phoneText2"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Enter your facebook profile URL"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:textColor="#A9A9A9"
            android:background="@null"/>
    </LinearLayout>
    <TextView
        android:id="@+id/categoryText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneLayout"
        android:layout_marginTop="190dp"
        android:text="Instagram"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#696969"/>


    <LinearLayout
        android:id="@+id/phoneLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dotsAndPipeline"
        android:layout_marginTop="350dp"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_border"
        android:padding="12dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:src="@drawable/instagram" />
        <EditText
            android:id="@+id/phoneText5"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Enter your instagram profile URL"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:textColor="#A9A9A9"
            android:background="@null"/>
    </LinearLayout>


    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/phoneLayout3"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/circle_shape"
        android:contentDescription="Next Page"
        android:scaleType="centerInside"
        android:src="@drawable/next" />

</RelativeLayout>