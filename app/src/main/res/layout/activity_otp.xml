<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    android:background="@android:color/white">

    <ImageView
        android:id="@+id/otp_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/otp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/enter_otp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Enter OTP"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/otp_image"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/instructions_text"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Enter the verification code we have sent"
        android:textSize="14sp"
        android:layout_below="@+id/enter_otp_text"/>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"

        android:layout_below="@+id/instructions_text">

        <EditText
            android:id="@+id/otp_digit_1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/curved_rectangle"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/otp_digit_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/curved_rectangle"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/otp_digit_3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/curved_rectangle"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/otp_digit_4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/curved_rectangle"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <Button
        android:id="@+id/generate_otp_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Login"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        android:background="#00A800"
        android:textSize="18dp"/>


</RelativeLayout>
